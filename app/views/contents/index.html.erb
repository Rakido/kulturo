<div class="background">  
  <div class="carousel" data-flickity>
    <% results = Content.last(3) %>
    <% results.each do |result| %>
      <div class="carousel-cell-contents">
        <%= link_to content_path(result) do %>
        <div class="card">
          <div class="card-image">
            <%= image_tag(result.image_url) %>
          </div>
          <div class="card-content text-center">
            <div class="nav-cap nav-cap-card">
              <%= result.source.capitalize %>
            </div>
            <div class="underline underline-card"></div>
            <h3 class="card-title">
              <%= result.title %>
            </h3>
            <div class="underline underline-card"></div>
            <div class="card-description body-small">
              <%= truncate(result.description, length: 110) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
  <div class="col-xs-6">
    <%= submit_tag 'Home?', class: 'btn btn-primary btn-cta col-xs-12', id: 'button-duration' %>
    <i class="fa fa-chevron-right nav-icon"></i>    
  </div>    
</div>
