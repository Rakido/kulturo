<div class="background">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
          <div class="flex-large search-title">Enjoy your <%= session[:kind] %></div>
          <div class="underline underline-title"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="carousel carousel-contents" data-flickity>
    <% @contents.each do |content| %>
      <div class="carousel-cell-contents">
        <% if content.kind == "video" %>
          <%= link_to content_path(content) do %>
            <div class="card">
              <div class="card-image">
                <%= image_tag(content.image_url) %>
              </div>
              <div class="card-content text-center">
                <div class="nav-cap nav-cap-card">
                  <%= content.source.capitalize %>
                </div>
                <div class="underline"></div>
                <h3 class="card-title">
                  <%= content.title %>
                </h3>
                <div class="underline"></div>
                <div class="card-description body-small">
                  <%= truncate(content.description, length: 80) %>
                </div>
              <% end %>
                <div class="card-footer">
                  <%= link_to content_bookmarks_path(content), method: :post, class: "social-icons" do %>
                    <div class="card-icon-social">
                      <i class="fa fa-bookmark-o"></i>
                    </div>
                    <div class="nav-cap nav-cap-card">Bookmark</div>
                  <% end %>
                
              <div class="social-icons">
               <div class="card-icon-social">
                  <i class="fa fa-facebook"></i>
                </div>
                <div class="nav-cap nav-cap-card">Share</div>
              </div>
            </div>
          </div>
        </div>
          
        <% else %>
        <!-- open article with url -->
          <%= link_to content.url, target:"_blank" do %>
            <div class="card">
              <div class="card-image">
                <%= image_tag(content.image_url) %>
              </div>
              <div class="card-content text-center">
                <div class="nav-cap nav-cap-card">
                  <%= content.source.capitalize %>
                </div>
                <div class="underline"></div>
                <h3 class="card-title">
                  <%= content.title %>
                </h3>
                <div class="underline"></div>
                <div class="card-description body-small">
                  <%= truncate(content.description, length: 100) %>
                </div>
                <%= link_to content_bookmarks_path(content), method: :post, class: "card-icon-social" do %>
                  <i class="fa fa-bookmark-o"></i>
                <% end %>
              </div>
            </div>
          <% end %>

        <% end %>

      </div>
    <% end %>
  </div>
    </div>
  </div>
</div>


