<div class="background">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
          <div class="flex-large search-title">Et voilou</div>
          <div class="underline underline-title"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="carousel" data-flickity>
    <% @contents.each do |content| %>
      <div class="carousel-cell-contents">
        <%= link_to content_path(content) do %>
          <div class="card">
            <div class="card-image">
              <%= image_tag(content.image_url) %>
            </div>
            <div class="card-content text-center">
              <div class="nav-cap nav-cap-card">
                <%= content.source.capitalize %>
              </div>
              <div class="underline"></div>
              <h3 class="card-title">
                <%= content.title %>
              </h3>
              <div class="underline"></div>
              <div class="card-description body-small">
                <%= truncate(content.description, length: 100) %>
              </div>
              <%= link_to content_bookmarks_path(content), method: :post, class: "card-icon-social" do %>
                <i class="fa fa-bookmark-o"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row row-fixed">
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to "Home", root_path, class: 'btn btn-primary btn-cta btn-block' %>
    </div>
  </div>
</div>

  