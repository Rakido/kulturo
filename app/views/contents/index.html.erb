<div class="container">
  <h1><%= [session[:duration], session[:kind], session[:theme]] %></h1>
  <% results = Content.last(3) %>
  <div class="row">
    <%= results.each do |result| %>
      <div class="col-xs-4">
        <div class="card">
          <div class="card-image">
            <iframe width="100%" height="240" src="https://www.youtube.com/embed/iVDluenvuN0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
          </div>
          <div class="card-content text-center">
            <div class="nav-cap">
              <%= result.source.capitalize %>
            </div>
            <h3 class="card-title">
              <%= result.title %> 
            </h3>

            <div class="card-description body-small">
              <%= result.description %>
            </div>
          </div>  
        </div>  
      </div>
    <% end %>
  </div>
</div>