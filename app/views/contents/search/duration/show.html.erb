<div class="background">  
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
            <div class="flex-large search-title">Pick a time</div>
            <div class="underline"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="category-choices">
        <%= form_tag contents_search_duration_path, {class: 'col-xs-12 content-duration-form'} do %>
          <% @durations.each_with_index do |duration, index| %>
            <div class="col-xs-12">
              <label for="duration_<%= index %>">
                <div class="category-choice">
                  <!-- <i class="fa fa-clock-o category-icon"></i>  -->
                  <div class="icon">
                    <%= image_tag "contents/duration-pictos/duration-#{duration}.svg", class: "category-icon" %>              
                  </div>

                  <div class="step-choice">
                    <%= duration_naming(duration) %>
                  </div>
                </div>
              </label>

              <input type="radio" class="hidden" value="<%= duration %>" name="duration" id="duration_<%= index %>">
            </div>
          <% end %>

          <div class="col-xs-6">
            <%= submit_tag 'Save', class: 'btn btn-primary btn-cta col-xs-12', id: 'button-duration' %>
            <i class="fa fa-chevron-right nav-icon"></i>    
          </div>    
        <% end %> 
      </div>
    </div>
  </div>
</div>


