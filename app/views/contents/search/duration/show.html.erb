<div class="background">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
            <div class="flex-large search-title">Pick a time</div>
            <div class="underline"></div>
        </div>
      </div>
    </div>

    <%= form_tag contents_search_duration_path do %>
      <div class="row">
        <div class="category-choices">
          <div class="col-xs-12">
            <% @durations.each_with_index do |duration, index| %>
              <div class="col-xs-12">
                <label for="duration_<%= index %>">
                  <div class="category-choice">
                    <!-- <i class="fa fa-clock-o category-icon"></i>  -->
                    <div class="icon">
                      <div class="value">
                        <%= duration %>
                      </div>
                      <%= image_tag "contents/duration-pictos/duration-#{duration}.svg", class: "category-icon" %>
                    </div>

                    <div class="step-choice">
                      <%= duration_naming(duration) %>
                    </div>
                  </div>
                </label>

                <input type="radio" class="hidden" value="<%= duration %>" name="duration" id="duration_<%= index %>">
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <%= button_tag type: 'submit', class: 'btn btn-primary btn-cta btn-block' do %>
            <i class="fa fa-chevron-right nav-icon"></i>
            Save
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
