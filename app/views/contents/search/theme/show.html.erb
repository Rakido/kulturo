<div class="background">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
          <div class="flex-large search-title">Select a category</div>
          <div class="underline underline-title"></div>
        </div>
      </div>
    </div>
    <%= form_tag contents_search_theme_path do %>
      <div class="row">
        <div class="category-choices">
          <div class="col-xs-12">
            <% @themes.each_with_index do |theme, index| %>
              <div class="col-xs-6">
                <%= link_to contents_search_theme_path(theme: theme), method: :post do %>
                <label for="theme_<%= index %>">
                  <div class="theme-choice">
                    <div class="content-card-theme text-center">
                      <div class="icon">
                        <%= inline_svg "contents/theme-pictos/theme-#{theme}.svg", class: 'pictos' %>
                      </div>
                      <div class="step-choice-theme">
                        <%= theme_naming(theme) %>
                      </div>
                    </div>
                  </div>
                </label>
                <% end %>
                <input type="radio" class="hidden" value="<%= theme %>" name="theme" id="theme_<%= index %>">
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

