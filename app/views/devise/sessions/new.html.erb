<div class="background">
  <div class="container">
    <h4 class="sign-subtitle">Connectez-vous</h4>

    <div class="form-inputs text-left">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.email_field :email, autofocus: true, placeholder: 'Entrer votre email'%>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe' %>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="form-actions">
        <%= f.submit "Se connecter", class: "button-cta button-cta-sign" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>



