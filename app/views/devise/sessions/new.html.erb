<div class="background-secondary">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
          <div class="flex-large search-title connexion-title">Sign-in</div>
          <div class="underline underline-title"></div>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <h1 class="connexion-h1">Hi visitor of the future</h1>
      <div class="col-xs-12">
        <div class="form-inputs text-left">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email '%>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
          <div class="links-connection">
            <%= render "devise/shared/links" %>
          </div>
          </div>
        </div>
      </div>
      <div class="row row-fixed">
        <div class="form-actions">
          <div class="col-xs-6 col-xs-offset-3">
            <%= f.submit "Login", class: "btn btn-cta btn-block button-cta-connexion" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



