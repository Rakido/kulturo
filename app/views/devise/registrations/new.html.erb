<div class="background-secondary">
  <div class="container">
    <div class="form-group text-center">
      <div class="row text-center">
        <div class="search-head">
          <div class="flex-large search-title connexion-title">Inscription</div>
          <div class="underline underline-title"></div>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <h1 class="connexion-h1">Rejoignez la communaut√©</h1>
      <div class="col-xs-12">
        <div class="form-inputs text-left">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

            <%= f.input :email, required: true, autofocus: true, placeholder: 'adresse@gmail.com' %>
            <%= f.input :password, required: true, placeholder: 'Mot de passe' %>
            <%= f.input :password_confirmation, required: true, placeholder: 'Confirmer le mot de passe', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <div class="links-connection">
            <%= render "devise/shared/links" %>
          </div>
          </div>
        </div>
      </div>
      <div class="row row-fixed">
        <div class="form-actions">
          <div class="col-xs-6 col-xs-offset-3">
            <%= f.submit "Se connecter", class: "btn btn-cta btn-block button-cta-connexion" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



